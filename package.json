{
  "name": "ayahay",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "admin",
    "web",
    "api",
    "packages/*"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "scripts": {
    "api:start": "yarn --cwd api start:dev",
    "api:init-db": "yarn --cwd api db:init-dev",
    "api:reset-db": "yarn --cwd api db:reset-dev",
    "web:start": "yarn --cwd web dev",
    "admin:start": "yarn --cwd admin dev -p 3001"
  }
}
