{
  "name": "ayahay",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "admin",
    "web",
    "api",
    "packages/*"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "scripts": {
    "api:start": "yarn workspace @ayahay/api start:dev",
    "api:init-db": "yarn workspace @ayahay/api db:init-dev",
    "api:reset-db": "yarn workspace @ayahay/api db:reset-dev",
    "web:start": "yarn workspace @ayahay/web start:dev",
    "admin:start": "yarn workspace @ayahay/admin start:dev -p 3002"
  },
  "packageManager": "yarn@3.6.3"
}
